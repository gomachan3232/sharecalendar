<h2>新規登録</h2>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>

  <%= render 'devise/shared/error_messages', model:f.object %>

  ニックネーム(10文字以内)
  <%= f.text_field :nickname, placeholder:"例）ヤマダ　タロウ" %>

  メールアドレス
  <%= f.email_field :email, placeholder:"PC・携帯どちらでも可"%>

  パスワード(6文字以上・半角英数字混同)
   <%= f.password_field :password, placeholder:"入力してください" %>

   パスワード(確認用)
   <%= f.password_field :password_confirmation, placeholder:"上記と同じパスワード" %>

   生年月日
   <%= raw sprintf(
      f.date_select(
     :birthday,
     use_month_numbers: true,
     prompt:'--',
     start_year: 1930,
     end_year: (Time.now.year - 5),
     date_separator: '%s'),
     "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p> " %>

    <%= f.submit "会員登録" %>
   
<% end %>
  

 